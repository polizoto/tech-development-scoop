<article>
  <a class="edit-link" href="/dashboard"> &larr; Back to dashboard</a>
  <div class="card">
  <h3 class="card-header">Edit Post</h3>
  <form class="edit-post-form" class="card-body">
    <div>
      <input class="form-input" name="post-title" type="text" value="{{post.title}}" />
      <textarea class="form-input" name="post-content" type="text" />{{post.post_content}}</textarea>
    <div>
      Created by you on {{format_date post.created_at}}
      |
      <a class="edit-link" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button id="edit-post-btn" type="button" class="btn">Update</button>
    <button id="delete-post-btn" type="button" class="btn">Delete</button>
  </form>
  </div>
</article>
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button id="comment-form-btn" class="btn" type="button">Add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>