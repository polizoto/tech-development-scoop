
<div class="post-list">
  {{#each posts as |post|}}
    <div class="card">
      <div class="card-header">
      <h3 >{{post.title}}</h3>
      <span>Posted by {{post.user.username}} on {{post.created_at}}</span>
      </div>
        <div class="card-body">
          <p>{{post.post_content}}</p>
          <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
      </div>
      {{/each}}
</div>
